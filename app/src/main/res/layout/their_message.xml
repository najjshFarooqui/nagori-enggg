<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp"
    android:clipToPadding="false"
    android:paddingLeft="8dp"
    android:paddingRight="60dp">

    <View
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_name" />


    <TextView
        android:id="@+id/name_sender"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="2dp"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:text="grrc"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/message_body_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/name_sender"
        android:minWidth="60dp"
        android:elevation="2dp"
        android:padding="8dp"
        android:background="@drawable/their_message"
        android:textColor="@color/black"
        android:text="How are you doing? This is a long message that should probably wrap."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/time_their"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_body_sender"
        android:layout_alignParentStart="true"
        android:text="02:35 pm"
        android:visibility="gone"
        android:textSize="10sp" />


</RelativeLayout>
