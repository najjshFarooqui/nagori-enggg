<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        tools:context=".view.chat.LoginActvity">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/appcompat_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label"
                android:layout_marginTop="24dp"
                android:hint="name"
                android:textColor="@color/light_red"
                android:textColorHint="@color/light_red" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/appcompat_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appcompat_username">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/user_emaill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:textColor="@color/light_red"
                android:textColorHint="@color/light_red" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/appcompat_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appcompat_email">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="password"
                android:inputType="textEmailAddress"
                android:textColor="@color/light_red"
                android:textColorHint="@color/light_red" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appcompat_password"
            android:layout_marginTop="16dp"
            android:background="@drawable/page"
            android:elevation="8dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/signup_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="sign up"
            android:textColor="@color/dark_red"
            android:textSize="24sp" />


    </RelativeLayout>
</layout>