<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.applligent.nagoriengineering">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyNagoriApplication"
        android:allowBackup="true"
        android:icon="@drawable/turbine"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".view.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.CompanyListActivity" />
        <activity android:name=".view.DetailsActivity" />
        <activity android:name=".Copyright" />
        <activity android:name=".About" />
        <activity android:name=".view.PartsInfoActivity" />
        <activity android:name=".view.CompanyDetailsActivity" />
        <activity android:name=".view.ServiceInfoActivity" />
        <activity android:name=".view.ChatActivity" />
        <activity android:name=".view.LoginActvity" />
        <activity android:name=".view.RegisterActivity" />
        <activity android:name=".view.StartActivity" />
        <activity android:name=".view.MainActivity" />

        <service android:name=".service.MessageService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/turbine" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <activity android:name=".view.SetReminderActivity" />

        <receiver android:name=".service.AlarmReciever" />

        <activity android:name=".view.AlarmActivity" />
        <activity android:name=".view.RemindersActivity"></activity>
    </application>

</manifest>